<div class="page-header">
  <h1>Edit Movie</h1>
</div>

<div class="row">
  <div class="col-md-6">

    <form action="/movies/update/<%= @movie.id %>">
      <div class="form-group">
        <label for="title">Movie Title:</label>
        <input value="<%= @movie.title %>" type="text" name="title" class="form-control" id="title" placeholder="Enter movie title here">
      </div>
      <div class="form-group">
        <label for="title">Poster URL:</label>
        <input value="<%= @movie.image_url %>" type="text" name="poster_url" class="form-control" id="title" placeholder="Enter URL to a movie poster image">
      </div>
      <div class="form-group">
        <label for="year">Year:</label>
        <input value="<%= @movie.year %>" type="text" name="year" class="form-control" id="year" placeholder="Enter year here">
      </div>
      <div class="form-group">
        <label for="year">Plot Summary:</label>
        <input value="<%= @movie.plot %>" type="text" name="plot" class="form-control" id="year" placeholder="Enter year here">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>

  </div>
</div>

