        <label for="title">Movie Title:</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter movie title here">
      </div>
      <div class="form-group">
        <label for="title">Poster URL:</label>
        <input type="text" name="poster_url" class="form-control" id="title" placeholder="Enter URL to a movie poster image">
      </div>
      <div class="form-group">
        <label for="year">Year:</label>
        <input type="text" name="year" class="form-control" id="year" placeholder="Enter year here">
      </div>
      <div class="form-group">
        <label for="year">Plot Summary:</label>
        <input type="text" name="plot" class="form-control" id="year" placeholder="Enter year here">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>

  </div>
</div>

